@page
@model StokTakip.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Yeni Ürün";
}

<h2>Yeni Ürün</h2>

<form method="post" novalidate>
    <!-- Tüm form için özet hata kutusu -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Product.Name" class="form-label"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Stock" class="form-label"></label>
        <input asp-for="Product.Stock" class="form-control" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.CriticalLevel" class="form-label"></label>
        <input asp-for="Product.CriticalLevel" class="form-control" />
        <span asp-validation-for="Product.CriticalLevel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-page="Index" class="btn btn-outline-secondary">İptal</a>
</form>

@section Scripts {
    <!-- İstemci tarafı doğrulama için gerekli -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
