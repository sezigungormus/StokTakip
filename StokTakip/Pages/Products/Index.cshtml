@page
@model StokTakip.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Ürün Listesi";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}

<!-- Başlık + Yeni Ürün butonu -->
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Ürün Listesi</h2>
    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-page="Create" class="btn btn-primary">Yeni Ürün</a>
        </p>
    }
</div>

<!-- Arama formu -->
<form method="get" class="d-flex gap-2 mb-3">
    <input type="text" name="search" class="form-control" placeholder="Ürün adı ara"
           value='@Request.Query["search"]' />
    <button type="submit" class="btn btn-outline-primary">Ara</button>
    <a href="/Products" class="btn btn-outline-secondary">Temizle</a>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="onlyCritical" value="true" @(Request.Query["onlyCritical"] == "true" ? "checked" : "")>
        <label class="form-check-label">
            Sadece kritik ürünleri göster
        </label>
    </div>

</form>

<!-- (Gün 16) Uyarı mesajı -->
@if (TempData["Alert"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Alert"]</strong>

        @* Detay bağlantısı *@
        @if (ViewData["CriticalNames"] != null)
        {
            <a class="ms-2" data-bs-toggle="collapse" href="#criticalList" role="button" aria-expanded="false" aria-controls="criticalList">
                (Detayları göster)
            </a>
            <div class="collapse mt-2" id="criticalList">
                <small>Kritik ürünler: @ViewData["CriticalNames"]</small>
            </div>
        }

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<!-- (İsteğe bağlı) Kritik ürün sayısını göstermek istersen:
<div class="alert alert-info">Toplam kritik ürün: @Model.CriticalCount</div>
-->

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:7%">ID</th>
            <th>Ad</th>
            <th style="width:15%">Stok</th>
            <th style="width:15%">Kritik Seviye</th>
            <th style="width:25%">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            var rowClass = item.IsCritical ? "table-danger" : "";
            <tr class="@(item.IsCritical ? "table-danger fw-bold" : "")">
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @item.Stock
                    @if (item.IsCritical)
                    {
                        <span class="badge bg-danger ms-2">Kritik</span>
                    }
                </td>
                <td>@item.CriticalLevel</td>
                <td>
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Detay</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    }
                    else
                    {
                        <span class="text-muted"></span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

