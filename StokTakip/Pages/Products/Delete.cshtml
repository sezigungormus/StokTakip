@page "{id:int}"
@model StokTakip.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Ürün Sil</h1>

<h3>Bu ürünü silmek istiyor musunuz?</h3>

<div>
    <h4>Ürün</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ürün Adı
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Name
        </dd>
        <dt class="col-sm-2">
            Stok Miktarı
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Stock
        </dd>
        <dt class="col-sm-2">
            Kritik Seviye
        </dt>
        <dd class="col-sm-10">
            @Model.Product.CriticalLevel
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="SİL" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-secondary">VAZGEÇ</a>
    </form>
</div>
