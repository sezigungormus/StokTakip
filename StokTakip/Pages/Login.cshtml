@page
@model StokTakip.Pages.LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<h1>Giriş Yap</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="User.Username">Kullanıcı Adı</label>
        <input asp-for="User.Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Password">Şifre</label>
        <input asp-for="User.Password" class="form-control" type="password" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Giriş</button>
</form>

@if (!string.IsNullOrEmpty(ViewData["Error"]?.ToString()))
{
    <div class="alert alert-danger mt-3">@ViewData["Error"]</div>
}
